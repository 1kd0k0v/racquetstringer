<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/calibration"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RadioGroup
        android:id="@+id/modeRadioGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/factoryRadioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layoutDirection="rtl"
            android:textSize="16sp"
            android:text="@string/off"
            android:textAlignment="textStart"
            tools:layout_editor_absoluteX="137dp"
            tools:layout_editor_absoluteY="0dp" />

        <RadioButton
            android:id="@+id/personalRadioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layoutDirection="rtl"
            android:textSize="16sp"
            android:text="@string/on"
            android:textAlignment="textStart"
            tools:layout_editor_absoluteX="137dp"
            tools:layout_editor_absoluteY="0dp" />
    </RadioGroup>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/personalModeCalibrationLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/modeRadioGroup"
        app:layout_constraintVertical_bias="0.0">

        <com.gauravk.audiovisualizer.visualizer.WaveVisualizer
            android:id="@+id/visualizerFrameLayout2"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:avColor="@color/colorAccent"
            app:avGravity="top"
            app:avType="fill"
            app:avWidth="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/calibrationButton" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/defaultMeasurementLayout"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerInParent="true"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/tension_result_background"
            android:elevation="4dp"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toStartOf="@+id/measurementWithCalibrationLayout"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/readMoreTextView">

            <TextView
                android:id="@+id/defaultLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:text="@string/factory"
                android:textAppearance="@android:style/TextAppearance.Material.Medium"
                app:layout_constraintBottom_toTopOf="@+id/factoryModeTextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/factoryModeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:text="@string/zero"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline4"
                android:textColor="@android:color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/factoryModeUnitsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@+id/factoryModeTextView"
                app:layout_constraintStart_toStartOf="@+id/factoryModeTextView"
                app:layout_constraintTop_toBottomOf="@+id/factoryModeTextView" />

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/measurementWithCalibrationLayout"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerInParent="true"
            android:background="@drawable/tension_result_background"
            android:elevation="4dp"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/defaultMeasurementLayout"
            app:layout_constraintTop_toTopOf="@+id/defaultMeasurementLayout">

            <TextView
                android:id="@+id/calibrationLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:text="@string/calibrated"
                android:textAppearance="@android:style/TextAppearance.Material.Medium"
                app:layout_constraintBottom_toTopOf="@+id/personalModeTextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/personalModeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:text="@string/zero"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline4"
                android:textColor="@android:color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/calibrationPersonalModeUnitsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@+id/personalModeTextView"
                app:layout_constraintStart_toStartOf="@+id/personalModeTextView"
                app:layout_constraintTop_toBottomOf="@+id/personalModeTextView" />
        </android.support.constraint.ConstraintLayout>


        <Button
            android:id="@+id/calibrationButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            style="@style/Widget.MaterialComponents.Button"
            android:textSize="16sp"
            android:text="@string/calibrate"
            app:layout_constraintEnd_toEndOf="@+id/measurementWithCalibrationLayout"
            app:layout_constraintStart_toStartOf="@+id/measurementWithCalibrationLayout"
            app:layout_constraintTop_toBottomOf="@+id/measurementWithCalibrationLayout" />

        <TextView
            android:id="@+id/tv_calibration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textSize="14sp"
            android:text="@string/current_adjustment"
            app:layout_constraintBottom_toTopOf="@+id/measurementWithCalibrationLayout"
            app:layout_constraintEnd_toEndOf="@+id/measurementWithCalibrationLayout"
            app:layout_constraintStart_toStartOf="@+id/measurementWithCalibrationLayout" />

        <TextView
            android:id="@+id/instructionsTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:text="@string/instructions_calibration"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/readMoreTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/read_more"
            android:textColor="@color/colorAccent"
            app:layout_constraintStart_toStartOf="@+id/instructionsTextView"
            app:layout_constraintTop_toBottomOf="@+id/instructionsTextView" />
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>
